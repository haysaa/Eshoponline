@model IEnumerable<Product>

@{
    ViewBag.Title = "List of Products";
}

<h1>Ingredients</h1>
<a asp-action="Create">Create New Ingredient</a>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (Product i in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => i.ProductName)
                </td>
                <td>
                    <a asp-action="Details" asp-route-id="@i.ProductId">Details</a>
                    <a asp-action="Edit" asp-route-id="@i.ProductId">Edit</a>
                    <a asp-action="Delete" asp-route-id="@i.ProductId">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>